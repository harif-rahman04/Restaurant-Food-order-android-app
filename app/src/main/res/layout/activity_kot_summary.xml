<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".KotSummaryActivity">

    <LinearLayout
        android:id="@+id/overall_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@color/LemonChiffon"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/edit_kot_no_kot_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:background="@drawable/txt_view_border"
                    android:text="Kot No:"
                    android:textColor="@color/Red"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_txtvw_edit_all_kot_kot_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/txt_view_border"
                    android:gravity="right"
                    android:text="Date :"
                    android:textColor="@color/Red"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/waiter_code_txt_view_kot_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_view_border"
                    android:text="Waiter code :"
                    android:textColor="@color/Red"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt-room_type_kot_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/txt_view_border"
                    android:gravity="right"
                    android:text="Room-type:"
                    android:textColor="@color/Red"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tables_kot_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="Table"
                android:background="@drawable/txt_view_border"
                android:textColor="@color/Red"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:orientation="vertical"
        android:weightSum="2">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.95"
            android:divider="@color/colorGrandBlue"
            android:dividerHeight="1dp" />

        <Button
            android:id="@+id/checkout_btn_kot_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listView"
            android:layout_weight="0.05"
            android:background="@color/Brown"
            android:text="Checkout"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>